<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoPanelHeight="55dp"
        sothree:umanoShadowHeight="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:textSize="12sp"
                android:padding="20dp"
                android:gravity="center"
                android:text="底部可以上拉的 Panel 控件\n点击或者拖动下方的黄色部分可以弹出 Panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <me.shouheng.uix.widget.button.NormalButton
                android:id="@+id/btn_open"
                android:text="打开 Panel"
                style="@style/MenuItemButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                android:id="@+id/btn_close"
                android:text="关闭 Panel"
                style="@style/MenuItemButton"/>

        </LinearLayout>

        <RelativeLayout android:id="@+id/quickcontrols_container"
            android:background="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

        </RelativeLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</layout>