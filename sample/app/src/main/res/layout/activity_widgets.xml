<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.shouheng.uix.button.SwitchButton
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <me.shouheng.uix.text.VerticalTextView
                    android:text="君不見黃河之水天上來，奔流到海不復回。
君不見高堂明鏡悲白髮，朝如青絲暮成雪。
人生得意須盡歡，莫使金樽空對月。
天生我材必有用，千金散盡還復來。
烹羊宰牛且爲樂，會須一飲三百杯。
岑夫子，丹丘生。將進酒，杯莫停。
與君歌一曲，請君爲我側耳聽。
鐘鼓饌玉不足貴，但願長醉不願醒。
古來聖賢皆寂寞，惟有飲者留其名。
陳王昔時宴平樂，斗酒十千恣讙謔。
主人何為言少錢？徑須沽取對君酌。
五花馬，千金裘。呼兒將出換美酒，與爾同銷萬古愁。"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </HorizontalScrollView>

            <me.shouheng.uix.text.ClearEditText
                android:id="@+id/et_clear"
                android:layout_margin="8dp"
                android:hint="包含清除按钮的输入框"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <me.shouheng.uix.text.PasswordEditText
                android:id="@+id/et_psd"
                android:layout_margin="8dp"
                android:hint="密码输入框"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <me.shouheng.uix.button.LoadingButton
                android:id="@+id/btn"
                app:loading_button_text="点我试一下"
                app:loading_button_state="normal"
                app:loading_button_text_color="@color/white"
                app:loading_button_disable_color="@android:color/darker_gray"
                app:loading_button_normal_color="#008577"
                app:loading_button_selected_color="#00574B"
                app:loading_button_text_disable_color="@color/white"
                app:loading_button_style="ios"
                app:loading_button_text_size="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <me.shouheng.uix.button.LoadingButton
                app:loading_button_text="加载按钮 | 边角 5dp | 使用 fraction 计算按下时的颜色"
                app:loading_button_state="normal"
                app:loading_button_text_color="@color/white"
                app:loading_button_disable_color="@android:color/darker_gray"
                app:loading_button_normal_color="#008577"
                app:loading_button_text_disable_color="@color/white"
                app:loading_button_style="ios"
                app:loading_button_text_size="14sp"
                app:loading_button_corner_radius="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <me.shouheng.uix.button.Button
                android:id="@+id/btn_1"
                android:text="默认边角 | 自定义颜色"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:btn_normal_color="#FF5722"
                app:btn_selected_color="#D13F11"
                android:layout_margin="5dp"
                app:btn_disable_color="#E4DFDE"
                app:btn_text_disable_color="#1A1818"
                android:layout_width="200dp"
                android:layout_height="40dp"/>

            <me.shouheng.uix.button.Button
                android:id="@+id/btn_2"
                android:text="边角 5dp | 禁用"
                android:enabled="false"
                app:btn_corner_radius="5dp"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="35dp"/>

            <me.shouheng.uix.image.CircleImageView
                android:src="@drawable/fat_ass"
                app:border_width="1dp"
                app:border_overlay="true"
                android:layout_margin="8dp"
                app:border_color="@color/colorAccent"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <me.shouheng.uix.layout.RatioFrameLayout
                app:sizeRatio="5"
                android:layout_margin="8dp"
                android:background="#123456"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:text="宽高比 5:1"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </me.shouheng.uix.layout.RatioFrameLayout>

            <me.shouheng.uix.layout.SquareFrameLayout
                android:background="#123456"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:text="正方形"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </me.shouheng.uix.layout.SquareFrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>