<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:background="@color/settingBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.shouheng.uix.rv.EmptySupportRecyclerView
            android:id="@+id/rv"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <me.shouheng.uix.rv.EmptyView
            android:id="@+id/ev"
            app:empty_title="empty title ..."
            app:empty_detail="莫激动，测试一下为空的界面，不是 Bug！"
            app:empty_loading_style="android"
            app:empty_loading_tips="loading..."
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</layout>