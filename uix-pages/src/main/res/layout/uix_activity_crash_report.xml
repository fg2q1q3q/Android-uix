<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/uix_crash_error_image" />

    <me.shouheng.uix.widget.text.NormalTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57.2dp"
        android:layout_marginRight="57.2dp"
        android:gravity="center"
        tools:text="Crash crash crash crash crash crash crash crash crash crash crash crash crash crash crash crash"
        android:textSize="16sp"
        android:textStyle="bold" />

    <me.shouheng.uix.widget.text.NormalTextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57.2dp"
        android:layout_marginRight="57.2dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        tools:text="Crash crash crash crash crash crash crash crash crash crash crash crash crash crash crash crash"
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <me.shouheng.uix.widget.button.NormalButton
            android:id="@+id/btnRestart"
            android:text="@string/uix_crash_restart"
            android:textColor="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:btn_normal_color="?attr/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <me.shouheng.uix.widget.button.NormalButton
            android:id="@+id/btnLog"
            android:text="@string/uix_crash_log"
            android:textColor="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:btn_normal_color="?attr/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</LinearLayout>