<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    tools:viewBindingIgnore="true"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AboutPage.Item.Card">

    <android.support.v7.widget.AppCompatImageView
        style="@style/AboutPage.ContributorAvatar"
        android:scaleType="centerCrop"
        android:id="@+id/avatar"
        tools:ignore="ContentDescription"
        tools:src="#000000"/>

    <me.shouheng.uix.widget.text.NormalTextView
        style="@style/AboutPage.ContributorName"
        android:id="@+id/name"
        android:layout_toRightOf="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:layout_alignTop="@id/avatar"
        tools:text="Silencer"/>

    <me.shouheng.uix.widget.text.NormalTextView
        style="@style/AboutPage.ContributorDesc"
        android:id="@+id/desc"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        tools:text="Developer and Designer\nDeveloper and Designer\nDeveloper and Designer\nDeveloper and Designer\nDeveloper and Designer\nDeveloper and Designer"/>

    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_below="@id/desc"
        android:layout_toRightOf="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
